<% if @movies.any? %>
  <div class="wrapper">
    <div class="container">
      <div class="row">
        <% @movies.each do |movie| %>
          <div class="col-xs-12 col-md-6">
            <%= link_to movie_path(movie) do %>
             <h3><%= movie.title %></h3>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% else %>
  <div class="col-xs-12 col-md-6 col-md-offset-4">
    <h1>Post the first movie!!</1>
  </div>
<% end %>

<%= render "shared/modal" %>
